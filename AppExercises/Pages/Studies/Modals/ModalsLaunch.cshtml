@page
@model AppStudies.Pages.ModalsLaunchModel
@{
    ViewData["Title"] = "Study ModalsLaunch";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]

<!-- Page to launch Modals -->
<div class="container px-4 py-4" id="modals">
    <h2 class="pb-2 border-bottom">Launch Modals</h2>
    <p>Below are modals that can be used by the individual pages. Used for confirmation</p>

    <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
        <div class="col-md-7 col-lg-8">
            <span class="alert alert-info" role="alert">
                @Model.Message
            </span>
        </div>

        <div class="col-md-7 col-lg-8">
            <!-- Button trigger modal -->
            <button type="button" class="w-100 btn btn-primary my-1" data-bs-toggle="modal" data-bs-target="#softModal"
                    data-seido-modal-title="softModal" data-seido-modal-body="softModal body" data-seido-modal-cancel="Close" data-seido-modal-Ok="Save">
                Launch soft modal - a modal that closes also if you click outside the modal or hit escape
            </button>
        </div>

        <div class="col-md-7 col-lg-8">
            <!-- Button trigger modal -->
            <button type="button" class="w-100 btn btn-primary my-1" data-bs-toggle="modal" data-bs-target="#hardModal"
                    data-seido-modal-title="hardModal" data-seido-modal-body="hardModal body">
                Launch hard modal - a modal that DO NOT close if you click outside the modal or hot escape
            </button>
        </div>

        <div class="col-md-7 col-lg-8">
            <!-- Button trigger modal with a Post-->
            <button type="button" class="w-100 btn btn-primary my-1" data-bs-toggle="modal" data-bs-target="#dangerModal"
                    data-seido-modal-title="dangerModal" data-seido-modal-body="dangerModal body"
                    data-seido-modal-post-data="@Guid.NewGuid()" data-seido-modal-post-url="@Url.PageLink(Request.Path, "Delete")">
                Launch dangerModal with post outside form-tag via javascript, page not reloaded
            </button>
        </div>

        <div class="col-md-7 col-lg-8">
            <form method="post" class="needs-validation" novalidate>

                <!-- This is where selected item id will be stored -->
                <input type="hidden" name="groupId" data-seido-selected-item-id-target />

                <!-- Button trigger modal with explicit post button -->
                <button type="button" class="w-100 btn btn-primary my-1" data-bs-toggle="modal" data-bs-target="#submitModal"
                        data-seido-modal-title="submitModal" data-seido-modal-body="submitModal body"
                        data-seido-selected-item-id="@Guid.NewGuid()">
                    Launch submitModal with post inside form-tag via submit button, page reloaded
                </button>

                <!-- Modal with submit OK button within a form -->
                <div class="modal fade" id="submitModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Hello from modal
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button type="submit" asp-page-handler="Select" class="btn btn-primary btn-danger">Ok</button>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
</div>
